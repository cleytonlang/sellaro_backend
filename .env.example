# Database
DATABASE_URL=postgresql://user:password@localhost:5432/sellaro

# Server
PORT=3001
HOST=localhost
NODE_ENV=development
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:3000

# AWS S3
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Encryption
ENCRYPTION_KEY=your-secret-encryption-key-32-chars-min

# Better Auth
BETTER_AUTH_SECRET=your-auth-secret-key
BETTER_AUTH_URL=http://localhost:3000

# Redis - Choose one option:
# Option 1: Upstash Redis (recommended for production)
UPSTASH_REDIS_URL=rediss://default:your-password@your-endpoint.upstash.io:6379

# Option 2: Traditional Redis (local or self-hosted)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
